import boto3
from botocore.exceptions import NoCredentialsError, ClientError

BUCKET_NAME = "photo-video-repository"

def test_s3_connection():
    try:
        s3 = boto3.client("s3")
        response = s3.list_objects_v2(Bucket=BUCKET_NAME, MaxKeys=5)

        print(f"‚úÖ Connected to S3 bucket: {BUCKET_NAME}")
        print("üìÇ Listing sample objects:")
        if "Contents" in response:
            for obj in response["Contents"]:
                print(f" - {obj['Key']}")
        else:
            print("Bucket is empty.")
    except NoCredentialsError:
        print("‚ùå AWS credentials not found. Please check ~/.aws/credentials.")
    except ClientError as e:
        print(f"‚ùå AWS Client error: {e.response['Error']['Message']}")

if __name__ == "__main__":
    test_s3_connection()